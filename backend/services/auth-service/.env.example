# Environment Configuration for Auth Service with Mobile OTP Support

# Database Configuration
DB_HOST=localhost
DB_NAME=taskmanager
DB_USER=taskuser
DB_PASSWORD=taskpassword
DB_PORT=5432

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=24h

# Service Configuration
PORT=3001
NODE_ENV=development
LOG_LEVEL=info

# SMS Provider Configuration - Choose one or both

# Option 1: Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_FROM_NUMBER=+1234567890

# Option 2: AWS SNS SMS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

# OTP Configuration (optional - defaults are set in code)
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=10
MAX_OTP_ATTEMPTS_PER_HOUR=5
MAX_VERIFY_ATTEMPTS_PER_OTP=3

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://34.134.60.168

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000